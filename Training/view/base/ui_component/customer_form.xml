<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer_notes">
        <settings>
            <label translate="true">Account Notes</label>
        </settings>
        <button name="customer_note_edit_modal_button" component="Magento_Ui/js/form/components/button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="buttonClasses" xsi:type="string">open-customer-note-edit-modal-button</item>
                    <item name="actions" xsi:type="array">
                        <item name="0" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.parentName}.customer_note_edit_modal.customer_note_edit_loader</item>
                            <item name="actionName" xsi:type="string">destroyInserted</item>
                        </item>
                        <item name="1" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.parentName}.customer_note_edit_modal</item>
                            <item name="actionName" xsi:type="string">openModal</item>
                        </item>
                        <item name="2" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.parentName}.customer_note_edit_modal.customer_note_edit_loader</item>
                            <item name="actionName" xsi:type="string">render</item>
                        </item>
                    </item>
                </item>
            </argument>
            <settings>
                <title translate="true">Add New Note</title>
            </settings>
        </button>
        <modal name="customer_note_edit_modal">
            <settings>
                <options>
                    <option name="title" xsi:type="string">Note Form Modal</option>
                </options>
            </settings>
            <insertForm name="customer_note_form">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="noteListingProvider" xsi:type="string">ns = customer_note_listing, index = customer_note_listing</item>
                        <item name="noteModalProvider" xsi:type="string">${ $.parentName }</item>
                    </item>
                </argument>
                <settings>
                    <formSubmitType>ajax</formSubmitType>
                    <renderUrl path="mui/index/render_handle">
                        <param name="handle">customer_note_edit</param>
                        <param name="buttons">1</param>
                    </renderUrl>
                    <loading>false</loading>
                    <toolbarContainer>${ $.parentName }</toolbarContainer>
                    <externalProvider>${ $.ns }.customer_note_form_data_source</externalProvider>
                    <ns>customer_note_form</ns>
                    <exports>
                        <link name="parentId">${ $.externalProvider }:data.parent_id</link>
                    </exports>
                </settings>
            </insertForm>
        </modal>
        <insertListing name="customer_note_listing" >
            <settings>
                <dataLinks>
                    <exports>false</exports>
                    <imports>true</imports>
                </dataLinks>
                <autoRender>true</autoRender>
                <selectionsProvider>customer_note_listing.customer_note_listing.columns.ids</selectionsProvider>
                <dataScope>customer_note_listing</dataScope>
                <ns>customer_note_listing</ns>
            </settings>
        </insertListing>
    </fieldset>
</form>
